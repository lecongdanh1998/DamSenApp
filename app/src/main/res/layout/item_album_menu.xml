<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">
    <LinearLayout
        android:id="@+id/linearLayout_album"
        android:visibility="gone"
        android:layout_below="@id/relativeLayout_menu"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_title1_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:padding="@dimen/padding_item_menu"
            android:text="Siêu rạng rỡ"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/textSmall" />
        <TextView
            android:id="@+id/txt_title2_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:padding="@dimen/padding_item_menu"
            android:text="Valentine"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/textSmall" />
    </LinearLayout>
    <RelativeLayout
        android:background="@color/colorWhite"
        android:id="@+id/relativeLayout_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/txt_title_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:padding="@dimen/padding_item_menu"
        android:text="@string/app_name"
        android:textAllCaps="true"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/textLager" />
    <RelativeLayout
        android:layout_centerInParent="true"
        android:layout_toRightOf="@id/txt_title_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

       <ImageView
           android:id="@+id/img_album"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/ic_arrow_drop_down_black_24dp"
           />
    </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>